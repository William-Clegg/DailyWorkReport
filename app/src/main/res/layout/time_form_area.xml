<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/timeGroupLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/timeAreaNameInitial"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:hint="@string/areaHint"
        android:inputType="textCapWords"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/timeCostInitial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:hint="@string/costHint"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/timeAreaNameInitial"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/timeFirstCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        android:gravity="center"
        android:hint="@string/costHint"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/timeAreaNameInitial"
        app:layout_constraintTop_toBottomOf="@id/costInitial" />

    <EditText
        android:id="@+id/timeSecondCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        android:gravity="center"
        android:hint="@string/costHint"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/timeAreaNameInitial"
        app:layout_constraintTop_toBottomOf="@id/firstCost" />

    <EditText
        android:id="@+id/timeThirdCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        android:gravity="center"
        android:hint="@string/costHint"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/timeAreaNameInitial"
        app:layout_constraintTop_toBottomOf="@id/secondCost" />

    <EditText
        android:id="@+id/timeFourthCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        android:gravity="center"
        android:hint="@string/costHint"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/timeAreaNameInitial"
        app:layout_constraintTop_toBottomOf="@id/thirdCost" />

</android.support.constraint.ConstraintLayout>